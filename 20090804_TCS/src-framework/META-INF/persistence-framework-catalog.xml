<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
	<persistence-unit name="blPU" transaction-type="RESOURCE_LOCAL">
		<mapping-file>config/bc/jpa/domain/Category.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/Product.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/Sku.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/Availability.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/TargetContent.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/ShippingRate.orm.xml</mapping-file>
        <class>org.broadleafcommerce.catalog.domain.BasePriceImpl</class>
        <class>org.broadleafcommerce.catalog.domain.CategoryImpl</class>
        <class>org.broadleafcommerce.catalog.domain.CategoryProductImpl</class>
        <class>org.broadleafcommerce.catalog.domain.CategoryXref</class>
        <class>org.broadleafcommerce.catalog.domain.CrossSaleProductImpl</class>
        <class>org.broadleafcommerce.catalog.domain.FeaturedProductImpl</class>
        <class>org.broadleafcommerce.catalog.domain.ProductAttributeImpl</class>
        <class>org.broadleafcommerce.catalog.domain.ProductImpl</class>
        <class>org.broadleafcommerce.catalog.domain.SkuAttributeImpl</class>
        <class>org.broadleafcommerce.catalog.domain.SkuImpl</class>
        <class>org.broadleafcommerce.catalog.domain.UpSaleProductImpl</class>
        <exclude-unlisted-classes/>
        <properties>
			<property name="hibernate.archive.autodetection" value="false" />
        </properties>
	</persistence-unit>
</persistence>