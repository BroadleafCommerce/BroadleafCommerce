<component:CheckBoxDataGrid
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:component="org.broadleafcommerce.util.components.*"
	allowMultipleSelection="true"
	verticalAlign="middle">
	<mx:Script>
		<![CDATA[
			import org.broadleafcommerce.util.DataGridUtil;
			import mx.controls.Alert;
			import org.broadleafcommerce.util.components.CheckBoxListRenderer;

		]]>
	</mx:Script>
	<mx:DateFormatter id="df" formatString="MMM DD, YYYY"/>
	<component:columns>
		<mx:DataGridColumn
			dataField="title"
			headerText=" "
			width="25"
			sortable="false"
			itemRenderer="org.broadleafcommerce.util.components.CheckBoxListRenderer" />
		<mx:DataGridColumn
			dataField="title"
			headerText="Title">
	        <mx:itemRenderer>
	            <mx:Component>
	                <mx:VBox height="40" verticalGap="0">
	                    <mx:Script>
	                    	<![CDATA[
	                    		import org.broadleafcommerce.admin.cms.model.util.ContentUtil;
	                    	]]>
	                    </mx:Script>
	                    <mx:Label text="{data.title}" fontWeight="bold"/>
	                    <mx:Label text="{ContentUtil.findFullUrl(data.id)}" />
	                </mx:VBox>
	            </mx:Component>
	        </mx:itemRenderer>
		</mx:DataGridColumn>
		<mx:DataGridColumn
			dataField="lastModifiedDate"
			headerText="Last Modified"
			width="200">
			<mx:itemRenderer>
	            <mx:Component>
	            	<mx:VBox height="40" verticalGap="0" horizontalAlign="center">
	                	<mx:DateFormatter id="df" formatString="MMM DD, YYYY"/>
	                    <mx:Label text="{df.format(data.lastModifiedDate)}" />
	                    <mx:Label text="by {data.lastModifiedBy}" />
	                </mx:VBox>
	            </mx:Component>
	        </mx:itemRenderer>
		</mx:DataGridColumn>
		<mx:DataGridColumn
			dataField="activeStartDate"
			headerText="Display Dates"
			width="120">
			<mx:itemRenderer>
	            <mx:Component>
	                <mx:VBox height="40" verticalGap="0" horizontalAlign="center">
	                	<mx:DateFormatter id="df" formatString="MMM DD, YYYY"/>
	                    <mx:Label text="{df.format(data.activeStartDate)} -" />
	                    <mx:Label text="{df.format(data.activeEndDate)}" />
	                </mx:VBox>
	            </mx:Component>
	        </mx:itemRenderer>
		</mx:DataGridColumn>
		<mx:DataGridColumn
			dataField="online"
			headerText="Online"
			width="60"
			textAlign="center"/>
	</component:columns>
</component:CheckBoxDataGrid>
