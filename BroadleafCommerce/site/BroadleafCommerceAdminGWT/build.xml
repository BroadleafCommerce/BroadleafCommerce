<?xml version="1.0" encoding="UTF-8"?>
<project name="BroadleafCommerceAdminGWT" default="build-app" basedir="."
	xmlns:artifact="antlib:org.apache.maven.artifact.ant"
	xmlns:rsel="antlib:org.apache.tools.ant.types.resources.selectors">
	
	<!-- import the ant / maven integration tasks -->
	<path id="maven-ant-tasks.classpath" path="../../lib/maven-ant-tasks-2.0.10.jar" />
	<typedef resource="org/apache/maven/artifact/ant/antlib.xml" uri="antlib:org.apache.maven.artifact.ant" classpathref="maven-ant-tasks.classpath" />
	
	<!-- retrieve the web project pom file and import its jar dependencies -->
	<artifact:pom id="warPom" file="pom.xml"/>
	<artifact:dependencies filesetId="warDeps" pomRefId="warPom" useScope="test"/>
	
	<path id="build.runtime.classpath">
		<fileset refid="warDeps"/>
	</path>
	
	<property name="maven.build.finalName" value="broadleafadmin"/>
	<property name="maven.build.dir" value="target"/>
	<property name="maven.build.outputDir" value="${maven.build.dir}/classes"/>
	<property file="../../build.properties"/>
	
	<!-- start the integrated gwt development server inplace with the current codebase -->
	<target name="run-development-mode">
		<delete dir="war/WEB-INF/lib"/>
		<artifact:mvn mavenHome="${maven.home}" fork="false">
			<arg value="gwt:run"/>
			<arg value="-o"/>
			<arg value="-Dgwt.extraJvmArgs=-XX:MaxPermSize=1024M -Xmx1024M -Dlogs.dir=${logs.dir}"/>
		</artifact:mvn>
	</target>
	
	<!-- start the integrated gwt development server in debug mode inplace with the current codebase -->
	<target name="debug-development-mode">
		<delete dir="war/WEB-INF/lib"/>
		<artifact:mvn mavenHome="${maven.home}" fork="true">
			<arg value="gwt:debug"/>
			<arg value="-o"/>
			<arg value="-Dgwt.extraJvmArgs=-XX:MaxPermSize=1024M -Xmx1024M -Dlogs.dir=${logs.dir}"/>
		</artifact:mvn>
	</target>
	
	<!-- start the integrated gwt development server in debug mode inplace with the current codebase - add jrebel instrumentation -->
	<target name="debug-development-mode-instrumented">
		<delete dir="war/WEB-INF/lib"/>
		<!-- Make sure all the latest core java files are available to GWT for development mode compilation -->
		<copy todir="war/WEB-INF/classes">
			<fileset dir="../../core/BroadleafCommerceProfile/src/main/java">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../core/BroadleafCommerceProfile/src/main/resources">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../core/BroadleafCommerceProfileWeb/src/main/java">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../core/BroadleafCommerceProfileWeb/src/main/resources">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../core/BroadleafCommerceFramework/src/main/java">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../core/BroadleafCommerceFramework/src/main/resources">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../core/BroadleafCommerceFrameworkWeb/src/main/java">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../core/BroadleafCommerceFrameworkWeb/src/main/resources">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../module/BroadleafCommerceUSPSSchemas/src/main/java">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../module/BroadleafCommerceUSPSSchemas/src/main/resources">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../module/BroadleafCommerceUSPS/src/main/java">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../module/BroadleafCommerceCyberSourceAPI/src/main/java">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../module/BroadleafCommerceCyberSource/src/main/java">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="../../module/BroadleafCommerceCyberSource/src/main/resources">
				<include name="**/*.*"/>
			</fileset>
		</copy>
		<artifact:mvn mavenHome="${maven.home}" fork="true">
			<arg value="gwt:debug"/>
			<arg value="-o"/>
			<arg value="-Dgwt.extraJvmArgs=-XX:MaxPermSize=1024M -Xmx1024M -Dlogs.dir=${logs.dir} -noverify -javaagent:${jrebel.path}"/>
		</artifact:mvn>
	</target>
	
	<!-- start the integrated gwt development server in debug mode inplace with the current codebase - add yourkit profiling -->
	<target name="debug-development-mode-profiled">
		<delete dir="war/WEB-INF/lib"/>
		<artifact:mvn mavenHome="${maven.home}" fork="true">
			<arg value="gwt:debug"/>
			<arg value="-o"/>
			<arg value="-Dgwt.extraJvmArgs=-XX:MaxPermSize=1024M -Xmx1024M -Dlogs.dir=${logs.dir} -agentpath:${yourkit.agent.path}libyjpagent.jnilib=builtinprobes=none,delay=10000,sessionname=Jetty"/>
		</artifact:mvn>
	</target>
	
	<!-- Project Reference Targets -->
	<!-- build the application and create the war artifact -->
	<target name="build-app">
		<delete dir="war/WEB-INF/lib"/>
		<artifact:mvn mavenHome="${maven.home}" fork="true">
			<arg value="-Dmaven.test.skip=true"/>
			<arg value="install"/>
		</artifact:mvn>
	</target>
	
	<target name="start-db">  
        <echo message="Starting Data Base..." />  
        <java fork="true"  spawn="true" classname="org.hsqldb.Server" classpathref="build.runtime.classpath">  
            <arg  line="-database.0 file:data/broadleaf -dbname.0 broadleaf"/>  
        </java>  
    </target>
	
	<target name="stop-db">  
        <echo message="Execute SQL on new Data Base..." />  
        <sql  
            autocommit="true"  
            print="true"  
            classpathref="build.runtime.classpath"  
            driver="org.hsqldb.jdbcDriver"  
            url="jdbc:hsqldb:hsql://localhost/broadleaf;ifexists=true"  
            userid="sa"  
            password="">
            <transaction>SHUTDOWN</transaction>  
        </sql>  
        <echo message="SQL Executed on data base..." />  
    </target>

</project>
