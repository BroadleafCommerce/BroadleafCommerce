<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
	<persistence-unit name="blSecurePU" transaction-type="RESOURCE_LOCAL">
		<mapping-file>config/bc/jpa/domain/GiftCardPaymentInfo.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/CreditCardPaymentInfo.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/BankAccountPaymentInfo.orm.xml</mapping-file>
		<class>org.broadleafcommerce.payment.domain.BankAccountPaymentInfoImpl</class>
		<class>org.broadleafcommerce.payment.domain.CreditCardPaymentInfoImpl</class>
		<class>org.broadleafcommerce.payment.domain.GiftCardPaymentInfoImpl</class>
		<exclude-unlisted-classes/>
		<properties>
			<property name="hibernate.archive.autodetection" value="false" />
        </properties>
	</persistence-unit>
</persistence>