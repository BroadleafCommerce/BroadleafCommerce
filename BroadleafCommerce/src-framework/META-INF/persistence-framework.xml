<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">
	<persistence-unit name="BroadleafCommercePu" transaction-type="RESOURCE_LOCAL">
		<mapping-file>config/bc/jpa/domain/Product.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/Category.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/Order.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/OrderItem.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/OrderPayment.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/OrderShipping.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/Sku.orm.xml</mapping-file>
		<mapping-file>config/bc/jpa/domain/ShoppingCartPromotion.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/SkuBundle.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/Auditable.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/ProductList.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/ProductListAssociation.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/DynamicProductList.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/OrderItemAdjustment.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/ItemAttribute.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/BasePrice.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/OrderAdjustment.orm.xml</mapping-file>
        <mapping-file>config/bc/jpa/domain/Promotion.orm.xml</mapping-file>

        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.transaction.flush_before_completion" value="false"/>
            <property name="hibernate.connection.autocommit" value="false"/>

            <!-- This stuff is for caching... -->
            <property name="hibernate.cache.use_second_level_cache" value="false"/>
            <property name="hibernate.cache.use_query_cache" value="false"/>
        </properties>
	</persistence-unit>
</persistence>