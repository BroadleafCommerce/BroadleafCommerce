<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<entity class="org.broadleafcommerce.catalog.domain.BroadleafBasePrice" name="basePrice">
        <table name="BLC_BASE_PRICE"/>
        <inheritance strategy="JOINED"/>

        <attributes>
            <id name="id">
            	<column name="BASE_PRICE_ID"/>
                <generated-value/>
            </id>
            <basic name="amount">
                <column name="AMOUNT" />
            </basic>
            <basic name="startDate">
                <column name="START_DATE"/>
                <temporal>TIMESTAMP</temporal>
            </basic>
            <basic name="endDate">
            	<column name="END_DATE"/>
            	<temporal>TIMESTAMP</temporal>
            </basic>
            <many-to-one name="sku" target-entity="org.broadleafcommerce.catalog.domain.BroadleafSku">
            	<join-column name="SKU_ID" nullable="false"/>
            </many-to-one>
			<embedded name="auditable"/>
        </attributes>
    </entity>

</entity-mappings>