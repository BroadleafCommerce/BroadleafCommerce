<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<named-query name="READ_FIRST_SKU" >
		<query>SELECT sku FROM org.broadleafcommerce.catalog.domain.Sku sku
		</query>
	</named-query>

	<named-query name="READ_ALL_SKUS">
		<query>SELECT sku FROM org.broadleafcommerce.catalog.domain.Sku sku
		</query>
	</named-query>

	<named-query name="READ_SKUS_BY_ID">
		<query>SELECT sku FROM org.broadleafcommerce.catalog.domain.Sku sku
				WHERE sku.id IN (:skuIds)
		</query>
	</named-query>

	<named-query name="READ_SKUS_BY_CATEGORY_ID">
		<query>SELECT sku FROM org.broadleafcommerce.catalog.domain.Sku sku
			   WHERE sku.product.id = :productId
		</query>
	</named-query>

	<entity class="org.broadleafcommerce.catalog.domain.Sku" name="sku">
        <table name="BLC_SKU" >        	
        </table>
        <inheritance strategy="JOINED"/>
		<discriminator-column name="TYPE"/>

        <attributes>
            <id name="id">            	
            	<column name="SKU_ID"/>
                <generated-value/>                
            </id>
            <basic name="price">
                <column name="PRICE" nullable="false"/>
            </basic>
            <basic name="name">
                <column name="NAME" />
            </basic>
			<many-to-one name="product" >
				<join-column name="PRODUCT_ID" nullable="false"/>
			</many-to-one>
			<one-to-many name="itemAttributes" mapped-by="sku">
				<map-key name="name"/>
				<cascade><cascade-all/></cascade>
			</one-to-many>
			<embedded name="auditable"/>            
        </attributes>
    </entity>

</entity-mappings>