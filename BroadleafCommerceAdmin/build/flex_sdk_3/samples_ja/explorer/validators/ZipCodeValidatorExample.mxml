<?xml version="1.0" encoding="utf-8"?>
<!-- Simple example to demonstrate the ZipCodeValidator. -->
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml">

    <mx:Script>
        import mx.controls.Alert;
    </mx:Script>

    <mx:ZipCodeValidator source="{zip}" property="text" 
        trigger="{myButton}" triggerEvent="click"  
        valid="Alert.show('検証が成功しました!');"/>

    <mx:Panel title="ZipcodeValidator の例" width="75%" height="75%" 
        paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10">

        <mx:Form>
            <mx:FormItem label="5 桁または 9 桁の米国郵便番号を入力します : ">
                <mx:TextInput id="zip" width="100%"/>
            </mx:FormItem>

            <mx:FormItem >
                <mx:Button id="myButton" label="検証" />
            </mx:FormItem>
        </mx:Form>
    </mx:Panel>
</mx:Application>