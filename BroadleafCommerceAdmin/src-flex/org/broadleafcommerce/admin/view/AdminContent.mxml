<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:catalog="org.broadleafcommerce.admin.view.catalog.*"
	xmlns:offer="org.broadleafcommerce.admin.view.offer.*"
	width="100%" 
	height="100%">
	<mx:Script>
		<![CDATA[
			private const STATE_OFFER:String = "state_offer";
			private const STATE_CATALOG:String = "state_catalog";
		]]>
	</mx:Script>
	<mx:LinkBar height="100%" 
		width="10%"  
		dataProvider="contentViewStack" 
		direction="vertical"/>
	<mx:ViewStack id="contentViewStack" 
		width="90%" 
		height="100%">
		<offer:OfferCanvas id="offerCanvas"
			label="Offers" 
			height="100%" 
			width="100%" />
		<catalog:CatalogCanvas id="catalogCanvas" 
			label="Catalog" 
			height="100%" 
			width="100%" />	
		<mx:Canvas label="" 
			width="100%" 
			height="100%">
		</mx:Canvas>
	</mx:ViewStack>
