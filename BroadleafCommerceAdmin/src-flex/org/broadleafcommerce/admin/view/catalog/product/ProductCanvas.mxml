<?xml version="1.0" encoding="utf-8"?>
<mx:Canvas 
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	width="90%">
	<mx:Script>
		<![CDATA[
			private function handleNewProduct(event:Event):void{
				this.workingAreaHBox.removeAllChildren();
				var pdc:ProductFormCanvas = new ProductFormCanvas();
				pdc.editingMode = true;
				this.workingAreaHBox.addChild(pdc);
			}
			
			private function handleViewProducts(event:Event):void{
				this.workingAreaHBox.removeAllChildren();
				this.workingAreaHBox.addChild(new ViewProductsCanvas());
			}
		]]>
	</mx:Script>
	<mx:HBox 
		width="100%"
		height="100%"
		horizontalGap="20">
		<mx:VBox
			verticalGap="10">
			<mx:LinkButton
				id="newProductLinkButton"
				label="New Product"
				click="handleNewProduct(event)"/>
			<mx:LinkButton
				id="viewProductsLinkButton"
				label="View Products"
				click="handleViewProducts(event)"/>
		</mx:VBox>
		<mx:HBox
			id="workingAreaHBox"
			width="100%"
			height="100%"
			borderStyle="solid"
			cornerRadius="4"
			paddingBottom="10"
			paddingLeft="10"
			paddingRight="10"
			paddingTop="10">
		</mx:HBox>		
	</mx:HBox>
</mx:Canvas>