<?xml version="1.0" encoding="UTF-8"?>
<project name="XMLMergeMode" default="usage" basedir="..">
	<description>
		XMLMergeMod Build File
    </description>

	<property name="internal.build.file" value="${basedir}/build/xmlmergemod.build.xml" />
	<property name="build.env" value="dev"/>

	<target name="0. Clean" description="Cleans the staging area.">
		<ant antfile="${internal.build.file}" target="clean" />
	</target>

	<target name="1. Build Jars" description="Builds all jars to the staging area.">
		<ant antfile="${internal.build.file}" target="build-jars" />
	</target>

	<target name="usage">
		<echo>
			This is the ANT build file for the Lonestar project.
		</echo>
	</target>
	
</project>