<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.3.xsd">
    
    <cache alias="blCMSElements">
        <expiry>
            <ttl>3600</ttl>
        </expiry>
        <heap>10000</heap>
    </cache>

    <cache alias="cmsPageCache">
        <expiry>
            <ttl>3600</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>
    
    <cache alias="cmsPageMapCache">
        <expiry>
            <ttl>3600</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>
    
    <!-- Caches Page URIs by date added to Cache to reduce 
         number of queries to find Pages by URI.
         Cache for a day -->
    <cache alias="uriCachedDateCache">
        <expiry>
            <ttl>86400</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

    <!-- Structured Content Cache - 1 hour cache -->
    <cache alias="cmsStructuredContentCache">
        <expiry>
            <ttl>3600</ttl>
        </expiry>
        <heap>5000</heap>
    </cache>
    
    <!--  URLHandlerCache -->
    <cache alias="cmsUrlHandlerCache">
        <expiry>
            <ttl>3600</ttl>
        </expiry>
        <heap>5000</heap>
    </cache>
    
    <cache alias="blUrlHandler">
        <expiry>
            <ttl>86400</ttl>
        </expiry>
        <heap>1000</heap>
    </cache>

</config>
