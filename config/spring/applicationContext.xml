	<bean id="org.broadleafcommerce.payment.domain.PaymentResponseItem" class="org.broadleafcommerce.payment.domain.PaymentResponseItemImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.payment.domain.PaymentLog" class="org.broadleafcommerce.payment.domain.PaymentLogImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.Address" class="org.broadleafcommerce.profile.domain.AddressImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.ChallengeQuestion" class="org.broadleafcommerce.profile.domain.ChallengeQuestionImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.Country" class="org.broadleafcommerce.profile.domain.CountryImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.Customer" class="org.broadleafcommerce.profile.domain.CustomerImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.CustomerAddress" class="org.broadleafcommerce.profile.domain.CustomerAddressImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.CustomerPhone" class="org.broadleafcommerce.profile.domain.CustomerPhoneImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.IdGeneration" class="org.broadleafcommerce.profile.domain.IdGenerationImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.Phone" class="org.broadleafcommerce.profile.domain.PhoneImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.catalog.domain.Product" class="org.broadleafcommerce.catalog.domain.ProductImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.Role" class="org.broadleafcommerce.profile.domain.RoleImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.catalog.domain.Sku" class="org.broadleafcommerce.catalog.domain.SkuImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.State" class="org.broadleafcommerce.profile.domain.StateImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.profile.domain.User" class="org.broadleafcommerce.profile.domain.UserImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.email.domain.EmailTracking" class="org.broadleafcommerce.email.domain.EmailTrackingImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.email.domain.EmailTrackingClicks" class="org.broadleafcommerce.email.domain.EmailTrackingClicksImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.email.domain.EmailTrackingOpens" class="org.broadleafcommerce.email.domain.EmailTrackingOpensImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.email.domain.EmailTarget" class="org.broadleafcommerce.email.domain.EmailTargetImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.payment.domain.BankAccountPaymentInfo" class="org.broadleafcommerce.payment.domain.BankAccountPaymentInfoImpl" scope="prototype">
		<property name="encryptionModule" ref="blEncryptionModule"/>
	</bean>
	<bean id="org.broadleafcommerce.payment.domain.CreditCardPaymentInfo" class="org.broadleafcommerce.payment.domain.CreditCardPaymentInfoImpl" scope="prototype">
		<property name="encryptionModule" ref="blEncryptionModule"/>
	</bean>
	<bean id="org.broadleafcommerce.payment.domain.GiftCardPaymentInfo" class="org.broadleafcommerce.payment.domain.GiftCardPaymentInfoImpl" scope="prototype">
		<property name="encryptionModule" ref="blEncryptionModule"/>
	</bean>
	<bean id="org.broadleafcommerce.marketing.domain.TargetContent" class="org.broadleafcommerce.marketing.domain.TargetContentImpl" scope="prototype"/>

	<bean id="blEmailInfo" class="org.broadleafcommerce.email.service.info.EmailInfo" />
	<bean id="blNullEmailInfo" class="org.broadleafcommerce.email.service.info.NullEmailInfo" />
	<bean id="blRegistrationEmailInfo" parent="blNullEmailInfo" />

	<bean id="org.broadleafcommerce.offer.domain.Offer" class="org.broadleafcommerce.offer.domain.OfferImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.offer.domain.OfferCode" class="org.broadleafcommerce.offer.domain.OfferCodeImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.offer.domain.CandidateOrderOffer" class="org.broadleafcommerce.offer.domain.CandidateOrderOfferImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.offer.domain.CandidateItemOffer" class="org.broadleafcommerce.offer.domain.CandidateItemOfferImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.offer.domain.CandidateFulfillmentGroupOffer" class="org.broadleafcommerce.offer.domain.CandidateFulfillmentGroupOfferImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.offer.domain.OrderAdjustment" class="org.broadleafcommerce.offer.domain.OrderAdjustmentImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.offer.domain.OrderItemAdjustment" class="org.broadleafcommerce.offer.domain.OrderItemAdjustmentImpl" scope="prototype"/>
	<bean id="org.broadleafcommerce.offer.domain.FulfillmentGroupAdjustment" class="org.broadleafcommerce.offer.domain.FulfillmentGroupAdjustmentImpl" scope="prototype"/>

	<bean id="blTaxModule" class="org.broadleafcommerce.pricing.service.module.SimpleTaxModule">
		<property name="factor" value="0.05"/>
	</bean>

	<bean id="blShippingModule" class="org.broadleafcommerce.pricing.service.module.BandedShippingModule">
		<property name="feeTypeMapping">
			<map>
	 			<entry key="standard" value="SHIPPING" />
	 			<entry key="expedited" value="EXPEDITED"/>
	 			<entry key="truck" value="FREE" />
	 			<entry key="pickup" value="FREE" />
			</map>
		</property>
		<property name="feeSubTypeMapping">
			<map>
				<entry key="ALL" value="ALL" />
	 			<entry key="alsk" value="alsk" />
	 			<entry key="hawi" value="hawi" />
			</map>
		</property>
	</bean>

	<bean id="blPricingWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.pricing.service.workflow.PricingProcessContextFactory"/>
		</property>
		<property name="activities">
			<list>
                <bean class="org.broadleafcommerce.pricing.service.workflow.OfferActivity"/>
                <bean class="org.broadleafcommerce.pricing.service.workflow.FulfillmentGroupTotalActivity"/>
                <bean class="org.broadleafcommerce.pricing.service.workflow.ShippingActivity">
                    <property name="shippingModule" ref="blShippingModule"/>
                </bean>
				<bean class="org.broadleafcommerce.pricing.service.workflow.TaxActivity">
					<property name="taxModule" ref="blTaxModule"/>
				</bean>
				<bean class="org.broadleafcommerce.pricing.service.workflow.TotalActivity"/>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="blDefaultErrorHandler"/>
	</bean>

	<bean id="blGiftCardModule" class="org.broadleafcommerce.payment.service.module.DefaultModule"/>

	<bean id="blBankAccountModule" class="org.broadleafcommerce.payment.service.module.DefaultModule"/>

	<bean id="blCreditCardModule" class="org.broadleafcommerce.payment.service.module.DefaultModule"/>

	<bean id="blGiftCardService" class="org.broadleafcommerce.payment.service.PaymentServiceImpl">
		<property name="paymentModule" ref="blGiftCardModule"/>
	</bean>

	<bean id="blCreditCardService" class="org.broadleafcommerce.payment.service.PaymentServiceImpl">
		<property name="paymentModule" ref="blCreditCardModule"/>
	</bean>

	<bean id="blBankAccountService" class="org.broadleafcommerce.payment.service.PaymentServiceImpl">
		<property name="paymentModule" ref="blBankAccountModule"/>
	</bean>

	<bean id="blAuthorizeAndDebitWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.payment.service.workflow.PaymentProcessContextFactory">
				<property name="paymentActionType" value="AUTHORIZEANDDEBIT"/>
			</bean>
		</property>
		<property name="activities">
			<list>
				<bean class="org.broadleafcommerce.payment.service.workflow.PaymentActivity">
					<property name="paymentService" ref="blGiftCardService"/>
					<property name="userName" value="web"/>
				</bean>
				<bean class="org.broadleafcommerce.payment.service.workflow.PaymentActivity">
					<property name="paymentService" ref="blBankAccountService"/>
					<property name="userName" value="web"/>
				</bean>
				<bean class="org.broadleafcommerce.payment.service.workflow.PaymentActivity">
					<property name="paymentService" ref="blCreditCardService"/>
					<property name="userName" value="web"/>
				</bean>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="blDefaultErrorHandler"/>
	</bean>

	<bean id="blPaymentWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.payment.service.workflow.SimplePaymentProcessContextFactory"/>
		</property>
		<property name="activities">
			<list>
				<bean class="org.broadleafcommerce.payment.service.workflow.CompositeActivity">
					<property name="workflow" ref="blAuthorizeAndDebitWorkflow"/>
				</bean>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="blDefaultErrorHandler"/>
	</bean>

	<bean id="blCheckoutWorkflow" class="org.broadleafcommerce.workflow.SequenceProcessor">
		<property name="processContextFactory">
			<bean class="org.broadleafcommerce.checkout.service.workflow.CheckoutProcessContextFactory"/>
		</property>
		<property name="activities">
			<list>
				<bean class="org.broadleafcommerce.checkout.service.workflow.PricingServiceActivity"/>
				<bean class="org.broadleafcommerce.checkout.service.workflow.PaymentServiceActivity"/>
				<bean class="org.broadleafcommerce.checkout.service.workflow.CompleteOrderActivity"/>
			</list>
		</property>
		<property name="defaultErrorHandler" ref="blDefaultErrorHandler"/>
	</bean>

	<bean id="blMessageCreator" class="org.broadleafcommerce.email.service.message.MessageCreator">
		<constructor-arg ref="blVelocityEngine"/>
		<constructor-arg ref="blMailSender"/>
		<constructor-arg>
			<map>
                <entry key="number">
                	<bean class="org.apache.velocity.tools.generic.NumberTool" scope="prototype"/>
                </entry>
                <entry key="serverInfo" value-ref="blServerInfo"/>
            </map>
        </constructor-arg>
	</bean>

	<bean id="blShippingService" class="org.broadleafcommerce.pricing.service.ShippingServiceImpl">
		<property name="shippingModule" ref="blShippingModule"/>
	</bean>

	<bean id="blAccountNumberMask" class="org.broadleafcommerce.payment.AccountNumberMask">
		<constructor-arg>
			<list>
				<bean class="org.broadleafcommerce.payment.UnmaskRange">
					<constructor-arg value="0"/>
					<constructor-arg value="0"/>
				</bean>
				<bean class="org.broadleafcommerce.payment.UnmaskRange">
					<constructor-arg value="1"/>
					<constructor-arg value="4"/>
				</bean>
			</list>
		</constructor-arg>
		<constructor-arg value="X"/>
	</bean>

	<bean id="blCategoryDao" class="org.broadleafcommerce.catalog.dao.CategoryDaoImpl">
		<property name="queryCacheableKey" value="${query.cacheable}"/>
	</bean>

	<bean id="blProductDao" class="org.broadleafcommerce.catalog.dao.ProductDaoImpl">
		<property name="queryCacheableKey" value="${query.cacheable}"/>
	</bean>

	<bean id="blAvailabilityDao" class="org.broadleafcommerce.inventory.dao.AvailabilityDaoImpl">
		<property name="queryCacheableKey" value="${query.cacheable}"/>
	</bean>

	<bean id="blTargetContentDao" class="org.broadleafcommerce.marketing.dao.TargetContentDaoImpl">
		<property name="queryCacheableKey" value="${query.cacheable}"/>
	</bean>

	<bean id="blChallengeQuestionDao" class="org.broadleafcommerce.profile.dao.ChallengeQuestionDaoImpl">
		<property name="queryCacheableKey" value="${query.cacheable}"/>
	</bean>

	<bean id="blCountryDao" class="org.broadleafcommerce.profile.dao.CountryDaoImpl">
		<property name="queryCacheableKey" value="${query.cacheable}"/>
	</bean>

	<bean id="blIdGenerationDao" class="org.broadleafcommerce.profile.dao.IdGenerationDaoImpl">
		<property name="queryCacheableKey" value="${query.cacheable}"/>
	</bean>

	<bean id="blRoleDao" class="org.broadleafcommerce.profile.dao.RoleDaoImpl">
		<property name="queryCacheableKey" value="${query.cacheable}"/>
	</bean>

	<bean id="blStateDao" class="org.broadleafcommerce.profile.dao.StateDaoImpl">
		<property name="queryCacheableKey" value="${query.cacheable}"/>
	</bean>
</beans>
