<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd" version="1.0">

	<named-query name="READ_ORDERS_BY_CUSTOMER_ID" >
		<query>SELECT order FROM org.broadleafcommerce.order.domain.BroadleafOrder order
		WHERE order.customer.id = :customerId</query>
	</named-query>

	<named-query name="READ_ORDER_BASKET_FOR_CUSTOMER_ID">
		<query>SELECT basketOrder FROM org.broadleafcommerce.order.domain.BasketOrder basketOrder
		        WHERE basketOrder.customer.id = :customerId
		</query>
	</named-query>

	<named-query name="UPDATE_BASKET_ORER_TO_SUBMITED">
		<query>UPDATE org.broadleafcommerce.order.domain.BroadleafOrder blcOrder
		          SET blcOrder.type = 'SUBMITTED'
		        WHERE blcOrder.id = :id
		</query>
	</named-query>

	<entity class="org.broadleafcommerce.order.domain.BroadleafOrder" name="order">
        <table name="BLC_ORDER" >
        </table>
        <inheritance strategy="JOINED"/>
		<discriminator-column name="TYPE"/>

        <attributes>
            <id name="id">
            	<column name="ORDER_ID"/>
                <generated-value/>
            </id>
            <basic name="orderStatus">
                <column name="ORDER_STATUS" />
            </basic>
            <basic name="orderTotal">
                <column name="ORDER_TOTAL"/>
            </basic>
            <many-to-one name="customer" target-entity="org.broadleafcommerce.profile.domain.BroadleafCustomer">
				<join-column name="CUSTOMER_ID" nullable="false"/>
            </many-to-one>
			<many-to-one name="contactInfo" target-entity="org.broadleafcommerce.profile.domain.BroadleafContactInfo">
				<join-column name="CONTACT_INFO_ID"/>
			</many-to-one>
			<embedded name="auditable"></embedded>
        </attributes>
    </entity>

	<entity class="org.broadleafcommerce.order.domain.BasketOrder" name="basketOrder">
		<discriminator-value>BASKET</discriminator-value>
		<discriminator-column name="TYPE"/>
	</entity>

	<entity class="org.broadleafcommerce.order.domain.SubmittedOrder" name="submittedOrder">
		<discriminator-value>SUBMITTED</discriminator-value>
		<discriminator-column name="TYPE"/>
	</entity>
</entity-mappings>